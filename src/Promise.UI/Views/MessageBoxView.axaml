<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		xmlns:vm="clr-namespace:Promise.Application.ViewModels;assembly=Promise.Application"
		xmlns:controls="clr-namespace:Promise.UI.Controls;assembly=Promise.UI"
		Width="400" Height="250"
        x:Class="Promise.UI.MessageBoxView"
		x:DataType="vm:MessageBoxViewModel"
        Title="{Binding NotificationData.Title}"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1">
	<DockPanel>
		<controls:TitleBar Name="TitleBar" IsHitTestVisible="True"
						   DockPanel.Dock="Top" Height="28"
						   Title="{Binding NotificationData.Title}" 
						   Grid.ColumnSpan="5"/>
		<TextBlock Text="{Binding NotificationData.Message}"
				   TextWrapping="Wrap" Margin="3"
				   VerticalAlignment="Center"
				   HorizontalAlignment="Center"/>
	</DockPanel>
</Window>
